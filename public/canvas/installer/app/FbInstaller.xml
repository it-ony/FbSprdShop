<?xml version="1.0"?>
<app:FbInstallerClass xmlns="http://www.w3.org/1999/xhtml"
                      xmlns:js="js.core" xmlns:ui="js.ui" xmlns:conf="js.conf" xmlns:field="js.ui.field"
                      xmlns:app="app"
                      xmlns:data="sprd.data" xmlns:fb="facebook">

    <js:Injection cid="injection">
        <data:SprdApiDataSource cid="api" endPoint="config"/>
        <js:I18n cid="i18n" path="app/locale" locale="de" loadMomentJs="false"/>
    </js:Injection>

    <fb:Sdk appId="206748646126990" cid="fb" debug="true" status="true"
            channelUrl="//fb.spreadomat.net/channel.html"/>

    <div class="container">
        <div id="login-module">
            <ui:Dialog title="{i18n.t('login.title')}" class="modal" closable="false">
                <js:Content name="body">
                    <form class="form-horizontal" onsubmit="login">
                        <ui:Field label="{i18n.t('login.region')}">
                            <select items="{regions}" selectedItem="{region}">
                                <option>{i18n.ts('region',item)}</option>
                            </select>
                        </ui:Field>
                        <field:Text inputId="username" label="{i18n.t('login.username')}" value="{{user.username}}"/>
                        <field:Password inputId="password" label="{i18n.t('login.password')}" value="{{user.password}}"/>
                    </form>
                </js:Content>
                <js:Content name="footer">
                    <ui:Button type="success" onclick="login" label="{i18n.t('login.login')}"/>
                </js:Content>
            </ui:Dialog>
        </div>
        <div id="setup">

        </div>
    </div>
</app:FbInstallerClass>